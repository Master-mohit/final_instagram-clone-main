<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body, html {
            width: 100%;
            height: 100%;
        }
        #main {
            width: 100vw;
            height: 100vh;
            background-color: rgb(24,24,27);
            color: #fff;
        }
        #top {
            padding: 2vw 3vw;
            width: 100vw;
            height: 50px;
            background-color: rgb(24,24,27);
            display: flex;
            align-items: center;
            gap: 80px;
           
        }
        #top h1 {
            font-size: 8vw;
        }
        #top1 {
            padding-left: 4vw;
            width: 100vw;
            height: 70px;
            display: flex;
            align-items: center;
            gap: 30px;
        }
        .profile-pic {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: red;
            overflow: hidden;
        }
        .profile-pic img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        #bottom {
            position: fixed;
            top: 90%;
            padding: 2vw;
            width: 50vw;
            display: flex;
            align-items: center;
            gap: 30px;
        }
        #bottom h1{
            font-size: 3vw;
        }
        input {
            padding: 2vw 3vw;
            color: #fff;
            outline: none;
            border: none;
           margin-right: 6vw;
           background-color: rgb(24,24,27);
        }
        a {
           text-decoration: none;
            color: #fff;

        }
        #username h1{
            font-size: 8vw;
        }
        .comment {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
            margin-left: 5vw;
        }
        .comment .profile-pic {
            flex: 0 0 60px;
        }
        .comment .comment-content {
            flex: 1;
        }
        .comment h1 {
            margin-bottom: 5px;
        }
        .comment p {
            margin: 0;
        }
        
    </style>
</head>
<body>
    <div id="main">
        <div id="top">
            <a href="/feed"><h1><i class="ri-arrow-left-line"></i></h1></a>
            <h1>Comments</h1>
        </div>
        <div id="top1">
            <!-- <div class="profile-pic">
                <img src="/images/uploads/<%=user.picture%>" alt="Profile Picture">
            </div>
            <div id="username">
                <h1><%=user.username%></h1>
                <h2 id="message">Message goes here</h2>
            </div> -->
        </div>
        <div id="commentSection"></div>
        <div id="bottom">
            <div class="profile-pic">
                <img src="/images/uploads/<%=user.picture%>" alt="Profile Picture">
            </div>
            <div id="naam">
                <input id="commentInput" type="text" placeholder="Add a comment for...">
                <input id="postComment" type="button" value="Post">
            </div>
        </div>
    </div>
    <script>
        document.getElementById('postComment').addEventListener('click', function() {
            const commentText = document.getElementById('commentInput').value.trim();
            if (commentText !== '') {
                const username = "<%=user.username%>";
                const profileImage = "/images/uploads/<%=user.picture%>";
                appendComment(username, commentText, profileImage);
                document.getElementById('commentInput').value = '';
                document.getElementById('bottom').style.display = 'flex'; 
            }
        });
    
        function appendComment(username, commentText, picture) {
            const commentHtml = `
            <div class="comment">
                <div class="profile-pic">
                    <img src="${picture}" alt="Profile Picture">
                </div>
                <div class="comment-content">
                    <h1 style="font-size: 5vw;">${username}</h1> <!-- Adjusted font size here -->
                    <p>${commentText}</p>
                </div>
            </div>
            `;
            const commentBox = document.querySelector('#commentSection');
            if (commentBox) {
                commentBox.insertAdjacentHTML('beforeend', commentHtml);
            } else {
                console.error("Error: commentSection not found");
            }
        }
    </script>
    
</body>
</html>
